<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConfirmPopUp.HomePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label x:Name="title" Text="{Binding Title}" TextColor="#777" HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" FontSize="28" Margin="0,40,0,40" />
                <Label x:Name="name" Text="{Binding Name}" TextColor="#777" HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" FontSize="20" Margin="0,40,0,0" />
                <Label x:Name="email" Text="{Binding Email}" TextColor="#777" HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" FontSize="20" Margin="0,20,0,10" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>