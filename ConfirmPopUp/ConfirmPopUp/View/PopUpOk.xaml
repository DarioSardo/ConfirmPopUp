<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ConfirmPopUp.PopUpOk"
    CloseWhenBackgroundIsClicked="False">
    
    <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand" WidthRequest="300" HeightRequest="340" Margin="5" >
        <Frame BackgroundColor="#F4F4F4">
            <StackLayout Spacing="20" >
                 <Label Text="Confirmed" TextColor="#818789" HorizontalTextAlignment="Center"
                 VerticalTextAlignment="Center" FontSize="16" />

                <Label Text="EMAIL" TextColor="#818789" HorizontalTextAlignment="Center" LineBreakMode="WordWrap"
                 VerticalTextAlignment="Center" FontSize="10" />

                <Label Text="EMAIL 1" TextColor="#818789" HorizontalTextAlignment="Center"
                 VerticalTextAlignment="Center" FontSize="10" LineBreakMode="WordWrap" />

                <Button Text="CLOSE" FontSize="14" WidthRequest="250" TextColor="Black" VerticalOptions="Center"
                           Clicked="OnClose"
                      BorderColor="#e2071c" BorderRadius="25" BackgroundColor="White" BorderWidth="2" HeightRequest="48" Margin="20,0,20,0" />
            </StackLayout>
        </Frame>
    </StackLayout>
</pages:PopupPage>
    